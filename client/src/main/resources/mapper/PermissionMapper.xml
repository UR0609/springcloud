<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljryh.client.mapper.shiro.PermissionMapper">

    <select id="selectPermissionByRoleId" resultType="com.ljryh.client.entity.shiro.Permission">
        select
            a.*
        from
            permission a
        left join role_permission b on a.permission_id = b.permission_id
        WHERE
            1=1
        AND b.role_id = #{roleId}
    </select>

</mapper>
